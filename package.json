    "semantic-ui-react": "0.84.0",
    "serialize-javascript": "1.5.0",
    "style-loader": "0.23.0",
    "stylelint": "9.2.1",
    "stylelint-config-idiomatic-order": "6.2.0",
    "stylelint-config-standard": "18.2.0",
    "superagent": "4.0.0-beta.5",
    "svg-loader": "0.0.2",
    "svgo": "1.0.5",
    "svgo-loader": "2.1.0",
    "tlds": "1.203.1"
  }
}
